<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wallpaper.tim.phoneinsidewallpaper.UI.SetFragment">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/setting"
        android:textSize="@dimen/bigger_text_size"
        android:textColor="@color/black"
        android:layout_margin="13dp"/>

    <TextView
        style="@style/set_title_text"
        android:text="@string/terminal_text_size"/>


    <SeekBar
        android:id="@+id/terminal_text_seek_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/normal_margin"/>

    <TextView
        android:id="@+id/terminal_text_size_value"
        style="@style/set_title_text"
        android:gravity="center_horizontal"
        android:text="a"/>

    <TextView
        android:id="@+id/splitCountText"
        style="@style/set_title_text"
        android:text="@string/secondLayerSplitCount" />

    <SeekBar
        android:id="@+id/splitCountSeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"/>


    <Button
        android:id="@+id/back"
        style="@style/set_title_text"
        android:text="@string/back"
        android:background="@color/orange"/>

</LinearLayout>

</ScrollView>
